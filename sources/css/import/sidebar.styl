.sidebar
	full-width()
	z-index 10
	position relative
	
	@media (min-width: scr_md)
		.index &
			padding-bottom 80px
	.logo
		full-width()
		margin-bottom 20px
		@media (min-width: scr_md)
			display none
		svg
			max-width 188px
	.bages
		display none
		margin-bottom 95px
		margin-top 90px
		&__item
			max-width 200px
			margin-bottom 13px
			line-height 54px
		&__title
			top 4px
			position relative
		&__image
			max-width 54px
		@media (min-width: scr_md)
			display block
.sidebar, .index-news
	.news
		full-width()
		text-align: center
		background #1b1b1b
		padding 12px 0 5px
		@media (min-width: scr_md)
			padding 0
			width 100%
			margin-left 0
			background transparent
			max-width 75%
			text-align: left
		&__item
			full-width()
			position relative !important
			text-align center
			padding-bottom 0
			@media (min-width: scr_md)
				text-align left
		&__date
			color blue2
			font-size 10px
			font-weight bold
			margin-bottom 2px
			margin-top 6px
		&__title
			color white
			float none
			font-size 13px
			line-height 16px
			margin-bottom 0
			text-decoration underline
			max-width 70%
			display inline-block
			@media (min-width: scr_sm)
				font-size 15px
			@media (min-width: scr_md)
				font-size 13px
				float left
				margin-bottom 25px
				max-width none
			&:hover
				color blue2
		&__more
			font-size 10px
			text-transform uppercase
			color blue2
			font-weight bold
			&:hover
				text-decoration underline

.sidebar
	.news
		display none
		@media (min-width: scr_md)
			display block
.index-news
	full-width()
	.news
		height auto !important
		display block
		margin-top 30px
		@media (min-width: scr_md)
			display none
		&__more
			full-width()
			margin 15px 0 10px