.index
	.slider
		full-width()
		min-height 640px
		margin-top -130px
		&__item
			full-width()
			position relative
			height 100%
			min-height 640px
			background-position top center
			background-size cover
			padding-top 160px
			color white
			&--left
				.slider__title, .slider__content
					@media (min-width: scr_sm)
						float left
						margin-left 70px
		&__title, &__content
			width 100%
			width calc(100% - 100px)
			margin 0 auto
			clear both
			@media (min-width: scr_sm)
				width 60%
				float: right
				margin-right 70px
			@media (min-width: scr_md)
				margin 0
				max-width 495px
				width 50%
				margin-right 0
		&__title
			text-transform: uppercase
			font-size 22px
			margin-bottom 10px
			font-weight 800
			margin-top 0
			@media (min-width: scr_sm)
				font-size 55px
		&__content
			font-size 11px
			line-height 16px
			margin-bottom 5px
			@media (min-width: scr_sm)
				font-size 16px
				line-height 20px
		&__link
			margin-top 12px
			display inline-block
			color white
			border 1px solid white
			height 30px
			line-height 32px
			letter-spacing: 3px
			padding 0 25px
			text-transform: uppercase
			font-size 11px
			font-weight bold
			&:hover
				background white
				color toolbar_top
		&.background--dark
			svg
				path
					fill white
	
	.fotorama
		&, &__stage, .slider__item
			min-height 650px
			@media (min-width: scr_xs)
				min-height 690px
		&__arr
			background transparent
			top 0
			width 30px
			height 100%
			@media (min-width: scr_sm)
				width 50px
			svg
				position absolute
				top 50%
				left 50%
				margin-top 55px
				max-width 70%
				transform translateY(-50%) translateX(-50%)
	.sections
		full-width()
		background #001467
		&--6
			.sections__item
				@media (min-width: scr_sm)
					width (100/3)%
					&:nth-child(n + 3)
						border-top: 1px solid #062d77
					&:nth-child(4)
						border-left: 1px solid #062d77
					height 110px
				@media (min-width: scr_md)
					width (100/6)%
		&--7
			.sections__item
				@media (min-width: scr_xs)
					&:nth-child(7)
						width 100%
				@media (min-width: scr_sm)
					width (100/4)%
					&:nth-child(5), &:nth-child(6), &:nth-child(7)
						width (100/3)%
				@media (min-width: scr_md)
					width (100/7)%
		&--8
			.sections__item
				@media (min-width: scr_sm)
					width (100/4)%
				@media (min-width: scr_md)
					width (100/8)%
		&--7, &--8
			.sections__item
				@media (min-width: scr_sm)
					height 120px
					&:nth-child(n + 4)
						border-top: 1px solid #062d77
					&:nth-child(5)
						border-left: 1px solid #062d77
		&__item
			border-right 1px solid #062d77
			float left
			text-align: center
			width 100%
			height 100px
			t(background-color)
			&:hover
				background #003285
			&:first-of-type
				border-left 1px solid #062d77
			@media (max-width: scr_xs)
				&:nth-child(1n + 1)
					border-left: 1px solid #062d77
					border-top: 1px solid #062d77
			@media (min-width: scr_xs)
				height 100px
				width 50%
				&:nth-child(2n + 1)
					border-left: 1px solid #062d77
				&:nth-child(n + 2)
					border-top: 1px solid #062d77
			@media (min-width: scr_md)
				border-top 0
				border-left 0
				
