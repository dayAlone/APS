@font-face
	font-family 'Proxima'
	src url("../fonts/ProximaNova-XBold.ttf")
	src local('â˜º'), url('../fonts/ProximaNova-XBold.ttf') format('truetype')
	font-weight 800

.index
	.slider
		full-width()
		min-height 630px
		margin-top -130px
		&__item
			full-width()
			position relative
			height 100%
			min-height 630px
			background-position top center
			background-size cover
			padding-top 160px
			color white
		&__title, &__content
			width 50%
			float: right
			clear both
			max-width 495px
		&__title
			text-transform: uppercase
			font-size 55px
			margin-bottom 10px
			font-weight 800
			margin-top 0
		&__content
			font-size 16px
			line-height 20px
			margin-bottom 5px
		&__link
			margin-top 12px
			display inline-block
			color white
			border 1px solid white
			height 30px
			line-height 32px
			letter-spacing: 3px
			padding 0 25px
			text-transform: uppercase
			font-size 11px
			font-weight bold
			&:hover
				background white
				color toolbar_top
	.sections
		full-width()
		background #001467
		&__item
			height 120px
			border-right 1px solid #062d77
			float left
			text-align: center
			width (100/7)%
			t(background-color)
			&:hover
				background #003285
			&:first-of-type
				border-left 1px solid #062d77
		&__image
			margin-top 17px
		&__text
			color white
			font-size 10px
			text-transform: uppercase
			line-height 12px
			font-weight bold
			max-width 85%
			display inline-block
			margin-top 5px
			@media (min-width: scr_lg)
				font-size 11px
	.partners
		full-width()
		height 85px
		line-height 85px
		text-align: center
		overflow hidden
		&__item
			img
				vertical-align: center
				display inline-block
				margin 0 38px
				max-height 34px
				max-width 75px
	.news
		full-width()
		position relative
		.container
			position relative
		&__frame
			position absolute
			width 50%
			right 15px
			bottom 15px
			max-width 480px
			color white
			padding 14px 18px 10px
			font-size 13px
			background rgba(0, 25, 102, .75)
		&__date
			font-size 11px
			color blue
			font-weight bold
			margin-bottom 8px
		&__title
			line-height 16px
			text-decoration: underline
			display inline-block
			color white
			&:hover
				color blue
		&__more
			text-transform: uppercase
			display inline-block
			margin-top 17px
			color blue
			font-size 11px
			text-decoration: underline
			font-weight: bold

.page
	&__divider
		height 1px 
		background #c6cdd2
		width 100%
		margin 10px 0
		& + .products
			margin-top -10px
	&__frame
		background #ffffff
		padding 35px 45px
		margin-top 20px
		margin-right -15px
		margin-left -15px
		color #233347
		.catalog-category &
			padding 0
		p
			font-size 16px
	&__title
		margin 0
		text-transform: uppercase
		padding 0
		font-size 35px
		line-height 35px
		color #233347
		font-weight bold
	&__sub-title
		font-size 22px
		margin-bottom 0
		padding-bottom 0

.about
	.partners
		text-align: center
		&__item
			display inline-block
			min-height 160px
			max-width 130px
			font-weight bold
			text-transform: uppercase
			font-size 10px
			line-height 12px
			color #233347
		&__image
			height 75px
			line-height 80px
			img
				vertical-align: middle
				max-width 100%
		&__text
			max-width 95%
			display inline-block

.catalog-category
	.page
		margin-bottom 30px
	.sections
		width 100%
		&__item
			width 100%
			margin-bottom 1px
			t(min-height, .4s)
			min-height 130px
			&--open
				transition-delay 0.2s
				transition-duraion .2s
				.sections__content
					display block
				.sections__icon
					opacity 1
				.sections__title:after
					background rgba(0, 0, 0, 0) !important
		&__title
			width 100%
			height 130px
			display inline-block
			line-height 130px
			background-size cover
			background-repeat no-repeat
			position relative
			&:after
				position absolute
				content ""
				background rgba(0, 0, 0, .65)
				t(background-color)
				width 100%
				height 100%
				top 0
				left 0
			&:hover
				&:after
					background rgba(0, 0, 0, .45)
				.sections__icon
					opacity .7
		&__icon
			float left
			width 120px
			text-align: center
			opacity .25
			t(opacity)
			position relative
			z-index 2
			svg
				display inline-block
				vertical-align: middle
				path
					fill white
		&__name
			font-size 35px
			line-height 137px
			color white
			position relative
			z-index 2
		&__content
			display none
			width 100%
			padding 50px 120px 30px
	.sub-sections
		padding-left 35px
		padding-bottom 0
		&__item
			list-style none
			margin-bottom 25px
			t(min-height, .4s)
			&--open
				transition-delay 0.2s
				transition-duraion .2s
				.sub-sections__content
					display block
				.sub-sections__title
					color #007bf8
					border-dashed(#007bf8)
					svg
						transform rotate(90deg)
						path
							fill #007bf8
		&__content
			display none
			width 100%
			padding-top 15px
		&__title
			position relative
			border-dashed(#8598b8)
			font-size 20px
			color #233347
			&:hover
				color #007bf8
				border-dashed(#007bf8)
				svg
					path
						fill #007bf8
			svg
				position absolute
				left -36px
				top -2px
				t(transform)
				path
					fill #c6cdd2
					t(fill)
			&--link
				border-line(#8598b8)
				&:hover
					border-line(#007bf8)
	.sub-sub-sections
		padding-left 25px
		&__item
			list-style none
			margin-bottom 10px
			t(min-height, .4s)
			&--open
				transition-delay 0.2s
				transition-duraion .2s
				.sub-sub-sections__content
					display block
		&__title
			position relative
			font-size 15px
			border-dashed(#8598b8, 15px)
			color #263a5c
			&:hover
				color #007bf8
				border-dashed(#007bf8, 15px)
			&:after
				position absolute
				content ""
				width 15px
				height 2px
				background #007bf8
				top 6px
				left -25px
			&--link
				border-line(#8598b8, 15px)
				&:hover
					border-line(#007bf8, 15px)
		&__content
			display none
			width 100%
			padding 15px 0 5px
	.sub-sub-sub-sections
		padding-left 15px
		&__item
			margin-bottom 5px
			list-style none
		&__title
			font-size 13px
			position relative
			color #263a5c
			border-line(#dadee8, 12px)
			&:hover
				color #007bf8
				border-line(#007bf8, 12px)
			&:after
				position absolute
				content ""
				width 4px
				height 4px
				background #007bf8
				top 4px
				left -15px

.products
	&__item
		width 100%
		padding 30px 0
		border-bottom 1px solid #e3e6e9
	&__name
		display inline-block
		font-size 18px
		font-weight bold
		color #000000
		border-line(#d4d4d4, 19px)
		margin-bottom 20px
		&:hover
			color blue2
			border-line(blue2, 19px)
	&__text
		font-size 13px
		line-height 16px
		width 100%
	&__image
		display block
		width 100%
		height 100px
		background-size contain
		background-repeat no-repeat
		background-position center center

.pages
	width 100%
	margin-top 20px
	&__item
		display inline-block
		width 27px
		height 27px
		text-align: center
		margin-right 10px
		border 1px solid #0082dc
		line-height 30px
		color #0082dc
		font-size 13px
		&:hover
			color #0082dc
		&--active
			color white !important
			background #0082dc
			



